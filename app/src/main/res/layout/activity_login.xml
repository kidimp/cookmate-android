<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#214130"
    android:padding="32dp"
    tools:context=".ui.auth.LoginActivity">

    <!-- Логотип -->
    <TextView
        android:id="@+id/textLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasty"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@drawable/logo_outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />

    <!-- Заголовок -->
    <TextView
        android:id="@+id/textHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Find Your Next\nFavorite Dish"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:fontFamily="serif"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/textLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Поле Email -->
<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/inputLayoutEmail"
    style="@style/CustomOutlinedTextField"
    app:boxBackgroundMode="outline"
    app:hintTextAppearance="@style/WhiteHintAppearance"
    app:hintTextColor="@color/white_hint_color"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/textHeadline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp">

        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Email"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white_hint_color"
        android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Поле Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPassword"
        style="@style/CustomOutlinedTextField"
        app:boxBackgroundMode="outline"
        app:hintTextColor="@color/white_hint_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textHeadline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="108dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Password"
            android:textColor="@android:color/white"
            android:textColorHint="#B0C4B1"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Forgot password -->
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:textColor="#B0C4B1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка входа -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="198dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="serif"
        android:letterSpacing="-0.05"
        android:paddingHorizontal="32dp"
        android:text="Explore the app →"
        android:textAllCaps="false"
        android:textColor="#214130"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textForgotPassword" />

    <!-- Ссылка на регистрацию -->
    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Don’t have account? Register"
        android:textColor="#B0C4B1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
